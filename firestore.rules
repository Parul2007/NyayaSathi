rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile: only readable/writable by the owner
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legal cases: strictly partition by userId field
    match /legal_cases/{caseId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Vault documents: strictly partition by userId field
    match /vault_documents/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // CMS Content - Read Only
    match /cms_legal_news/{articleId} {
      allow read: if true;
    }

    match /lawyers/{lawyerId} {
      allow read: if true;
    }

    // Public Forum
    match /public_forum/{discussionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}
